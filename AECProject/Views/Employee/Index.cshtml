@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@* <a herf="/Employee/NEw">NEw</a> *@
<a asp-action="New" asp-controller="Employee">New</a>

<table class="table tabel-border tabel-hover">
    <tr>
        <td>ID</td>
        <td>NAme</td>
        @* <td>Department</td> *@
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            @* <td>@item.Department.Name</td> *@
            <td>
                <a href="/Employee/Edit/@item.Id">Edit</a>
            </td>
        </tr>
    }
</table>