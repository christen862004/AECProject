@model Employee
@{
    ViewData["Title"] = "New";
    SelectList deptList = new SelectList(ViewBag.DeptList,"Id","Name");
}

<h1>New</h1>
<!--Form using Tag Helper (strong type view)-->
<form asp-action="SaveNew" asp-controller="Employee" method="post">
    <div asp-validation-summary="All" class="text-danger">
        <!--MOdel Propety error or any other error UL-->
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="JobTitle"></label>
        <input asp-for="JobTitle" class="form form-control" />
        <span asp-validation-for="JobTitle" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        @* <input asp-for="DepartmentId" class="form form-control" /> *@
        <select asp-for="DepartmentId" asp-items="deptList" class="form form-control">
            <option value="0">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-success"/>
</form>
<a asp-action="Index" asp-controller="Employee" >Back To List</a>
